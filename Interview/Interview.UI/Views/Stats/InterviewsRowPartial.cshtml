
@using Interview.Entities
@using Interview.UI.Models.Stats
@inject IViewLocalizer localizer

@{

    VmInterviewStats interviewStats = ViewBag.InterviewStats;

}

<div class="row">

    <div class="col-md-3">
        <div class="well well-sm text-center">
            <div class="row">
                <div class="col-md-12">
                    <strong>@localizer["TimeSlots"]</strong>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <strong>@interviewStats.TotalInterviews</strong>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="well well-sm text-center">
            <div class="row">
                <div class="col-md-12">
                    <strong>@localizer["InterviewsCompleted"]</strong>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <strong>@interviewStats.CompletedInterviews</strong>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="well well-sm text-center">
            <div class="row">
                <div class="col-md-12">
                    <strong>@localizer["InterviewsRemaining"]</strong>
                </div>
        </div>
        <div class="row">
                <div class="col-md-12">
                    <strong>@interviewStats.RemainingInterviews</strong>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="well well-sm text-center">
            <div class="row">
                <div class="col-md-12">
                    <strong>@localizer["InterviewDays"]</strong>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <strong>@interviewStats.InterviewDays</strong>
                </div>
            </div>
        </div>
    </div>

</div>