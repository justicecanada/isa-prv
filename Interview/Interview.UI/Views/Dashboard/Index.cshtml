	<div class="col-md-12">

		<div id="ctl00_cphMainContent_ctl00">
		</div>

		<div class="panel panel-primary">
			<div class="panel-heading">
				<span id="ctl00_cphMainContent_lblHeadingFilters" class="h3">@localizer["dashboardFilter"]</span>
			</div>
