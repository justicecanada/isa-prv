								<option value="22">2020-JUS-IA-128473</option>
								<option value="21">2020-JUS-IA-1960-128922</option>
								<option value="20">2020-JUS-IA-6187-127217</option>
								<option value="19">2020-JUS-IA-127577</option>
								<option value="18">2020-JUS-IA-AS-123603</option>
								<option value="17">2020-JUS-IA-20329-128346</option>
								<option value="16">2020-JUS-IA-22836-125386</option>
								<option value="13">Ombudsman</option>
								<option value="12">2020-JUS-IA-JG-13767-126932</option>
								<option value="11">2020-JUS-IA-125156</option>
								<option value="10">LEP</option>
								<option value="9">2018-JUS-IA-116704</option>
								<option value="8">2019-JUS-IA-AAV-120056</option>
								<option value="7">2019-JUS-IA-TEST</option>
								<option value="6">2019-JUS-IA-AAV-1770-119634</option>
								<option value="5">2019-JUS-IA-AS-119794</option>
								<option value="4">2018-JUS-IA-AAV-23186-117078</option>
								<option value="3">2018-JUS-IA-AS-117002</option>
								<option value="1">2017-JUS-IA-AS-13431-110041</option>

							</select>
						</div>
					</div>
					<div class="col-md-2">
						<div class="form-group">
							<label for="ctl00_cphMainContent_ddlPeriods"><span class="field-name">@localizer["lbl_periodOfTime"]</span></label><select name="ctl00$cphMainContent$ddlPeriods" id="ctl00_cphMainContent_ddlPeriods" class="form-control">
								<option selected="selected" value="1">@localizer["selectOpt_DailyView"]</option>
								<option value="3">Monthly View</option>

							</select>
						</div>
						<input type="hidden" name="ctl00$cphMainContent$hfRole" id="ctl00_cphMainContent_hfRole" value="admin" />
						<input type="hidden" name="ctl00$cphMainContent$hfDepId" id="ctl00_cphMainContent_hfDepId" value="100000" />
						<input type="hidden" name="ctl00$cphMainContent$hfUserId" id="ctl00_cphMainContent_hfUserId" value="ec110ba3-2a03-4a89-8109-f0283e77679b" />
					</div>
					<div class="col-md-3">
						<div class="form-group">
							<label for="ctl00_cphMainContent_txtDateDebut"><span class="field-name">@localizer["lbl_startDate"]</span></label><input name="ctl00$cphMainContent$txtDateDebut" id="ctl00_cphMainContent_txtDateDebut" class="form-control full-width" type="date" data-rule-dateISO="true" />
						</div>
						<div class="form-group">
							<label for="ctl00_cphMainContent_txtDateFin"><span class="field-name">@localizer["lbl_endDate"]</span></label><input name="ctl00$cphMainContent$txtDateFin" id="ctl00_cphMainContent_txtDateFin" class="form-control full-width" type="date" data-rule-dateISO="true" />
						</div>
					</div>
					<div class="col-md-3">
						<input type="submit" name="ctl00$cphMainContent$btnClear" value="Clear" id="ctl00_cphMainContent_btnClear" class="btn-default btn btnMarginTop" formnovalidate="formnovalidate" />
						<input type="submit" name="ctl00$cphMainContent$btnApply" value="Apply" id="ctl00_cphMainContent_btnApply" class="btn-primary btn btnMarginTop" />
					</div>
				</div>

			</div>
		</div>

	</div>
</div>

