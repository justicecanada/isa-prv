@using Interview.UI.Models
@inject IViewLocalizer localizer

@{

    ViewBag.Title = localizer["Title"].Value;

    string contestId = ViewData["contestId"].ToString();

    List<VmContest> vmContests = ViewBag.VmContests;
    List<SelectListItem> vmContestItems = new List<SelectListItem>();
    vmContestItems.Add(new SelectListItem(localizer["PleaseSelect"].Value, ""));
    foreach (var vmContest in vmContests)
    {
        vmContestItems.Add(new SelectListItem()
        {         
            Value = vmContest.Id.ToString(),
            Text = vmContest.NoProcessus
        });
    }

}

<h1>@localizer["Title"]</h1>

<div>

    @Html.ActionLink(localizer["ManageContest"].Value, "Index", "Contests", new { contestId = contestId }, new { @class = "btn btn-primary" })
    @Html.ActionLink(localizer["ManageEmails"].Value, "Index", "Emails", new { contestId = contestId }, new { @class = "btn btn-primary" })
    @Html.ActionLink(localizer["ManageRoles"].Value, "Index", "Roles", new { contestId = contestId }, new { @class = "btn btn-primary" })
    @Html.ActionLink(localizer["Stats"].Value, "Index", "Stats", new { contestId = contestId }, new { @class = "btn btn-primary" })

</div>

<div class="row form-group mt-3">
    <div class="col-md-12">
        @Html.Label("lblContests", localizer["Contests"].Value, new { @for = "Contests" })
    </div>
    <div class="col-md-12">
        @Html.DropDownList("Contests", vmContestItems, new { @class = "form-control" })
    </div>
</div>

<script src="~/js/default/index.js" asp-append-version="true"></script>