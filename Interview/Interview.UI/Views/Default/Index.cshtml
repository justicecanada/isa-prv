@using Interview.UI.Models
@inject IViewLocalizer localizer

@{
    ViewBag.Title = localizer["Title"].Value;

    string contestId = ViewData["contestId"].ToString();

    List<VmContest> vmContests = ViewBag.VmContests;
    List<SelectListItem> vmContestItems = new List<SelectListItem>();
    foreach (var vmContest in vmContests)
    {
        vmContestItems.Add(new SelectListItem()
        {         
            Value = vmContest.Id.ToString(),
            Text = vmContest.NoProcessus
        });
    }

}

@{
    await Html.RenderPartialAsync("TopMenu");
}

<div class="row mrgn-bttm-md">

    <div class="col-md-4">
        <section class="alert alert-danger">
            <p>@localizer["ManageProcess"]</p>
            <div>
                @Html.ActionLink(localizer["ManageContest"].Value, "Index", "Contests", new { contestId = contestId }, new { @class = "btn btn-danger" })
                @Html.ActionLink(localizer["ManageEmails"].Value, "Index", "Emails", new { contestId = contestId }, new { @class = "btn btn-default" })
            </div>
        </section>
    </div>
    <div class="col-md-4">
        <section class="alert alert-warning">
            <p>@localizer["RolesForProcess"]</p>
            <div>
                @Html.ActionLink(localizer["ManageRoles"].Value, "Index", "Roles", new { contestId = contestId }, new { @class = "btn btn-warning" })
            </div>
        </section>
    </div>
    <div class="col-md-4">
        <section class="alert alert-info">
            <p>@localizer["StatsForInterviews"]</p>
            <div>
                @Html.ActionLink(localizer["Stats"].Value, "Index", "Stats", new { contestId = contestId }, new { @class = "btn btn-primary" })
            </div>
        </section>
    </div>

</div>

<panel class="ui-tabs-panel panel-default mrgn-bttm-md">
    <div class="panel-body">
        <div class="col-md-12">
            @Html.Label("lblContests", localizer["ListOfProcesses"].Value, new { @for = "Contests" }):
        </div>
        <div class="col-md-12">
            @Html.DropDownList("Contests", vmContestItems, new { @class = "form-control" })
        </div>
    </div>
</panel>

<section class="alert alert-info">
    <p>@localizer["Welcome"]</p>
    <div>
        @Html.ActionLink(localizer["Stats"].Value, "Index", "Stats", new { contestId = contestId }, new { @class = "btn btn-primary" })
    </div>
</section>

<script src="~/js/default/index.js" asp-append-version="true"></script>